<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.uwais_000.mosaicgame.MainMenuActivity">

    <TextView android:text="Mosaic Game" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnSinglePlayer"
        android:textSize="24dp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSinglePlayer"
        android:text="Single Player"
        android:layout_above="@+id/btnLocalMultiplayer"
        android:layout_alignRight="@+id/btnLocalMultiplayer"
        android:layout_alignEnd="@+id/btnLocalMultiplayer"
        android:layout_alignLeft="@+id/btnLocalMultiplayer"
        android:layout_alignStart="@+id/btnLocalMultiplayer"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Multiplayer"
        android:id="@+id/btnLocalMultiplayer"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnOnlineMultiplayer"
        android:layout_alignEnd="@+id/btnOnlineMultiplayer"
        android:layout_alignLeft="@+id/btnOnlineMultiplayer"
        android:layout_alignStart="@+id/btnOnlineMultiplayer"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOnlineMultiplayer"
        android:text="Online Multiplayer"
        android:layout_below="@+id/btnLocalMultiplayer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
